<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="649dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/register_bg"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


    </LinearLayout>

    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_pic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.5dp"
        android:layout_marginEnd="30.5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:text=""
        android:hint="@string/Username"
        android:textColorHint="@color/gray"
        android:textColor="@color/gray"
        android:elevation="5dp"/>


    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_edit_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.5dp"
        android:layout_marginEnd="30.5dp"
        android:layout_marginBottom="50dp"
        android:autoText="false"
        android:background="@drawable/round_border"
        android:editable="true"
        android:elevation="5dp"
        android:includeFontPadding="false"
        android:inputType="textPassword"
        android:keepScreenOn="false"
        android:text=""
        android:textColor="@color/gray"
        android:hint="@string/Password"
        android:textColorHint="@color/gray"
        />

    <ImageButton
        android:id="@+id/show_password_button"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/username_edit_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="-0dp"
        android:layout_marginBottom="-72dp"
        android:background="#00FF"
        android:clickable="true"
        android:contentDescription="Toggle Password Visibiity"
        android:elevation="5dp"
        android:onClick="showPassword"
        android:src="@drawable/show_password" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:textColor="#E10087"
        android:background="@drawable/round_button"
        android:text="Log in"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/register_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:elevation="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/logo_pic"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="25dp"
        android:elevation="100dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="700dp"
        android:layout_height="359dp"
        android:layout_gravity="center_horizontal|bottom"
        android:elevation="-5dp"
        android:scaleType="center"
        android:src="@drawable/login_img">

    </ImageView>

</RelativeLayout>

