<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/add_bg"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/register_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/add_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="350dp"
        android:src="@drawable/logo">

    </ImageView>

    <EditText
        android:id="@+id/fruit_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:layout_marginTop="50dp"
        android:hint="NAME"
        android:textColorHint="@color/gray"
        android:textColor="@color/pinkDarkpastel"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/add_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    
    <TextView
        android:id="@+id/ripeness_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fruit_name"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="RIPENESS LEVEL"/>

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:textOff="1"
        android:textOn="1"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton1"
        android:layout_marginTop="20dp"
        android:textOff="2"
        android:textOn="2"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton2"
        android:layout_marginTop="20dp"
        android:textOff="3"
        android:textOn="3"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton3"
        android:layout_marginTop="20dp"
        android:textOff="4"
        android:textOn="4"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton4"
        android:layout_marginTop="20dp"
        android:textOff="5"
        android:textOn="5"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton5"
        android:layout_marginTop="20dp"
        android:textOff="6"
        android:textOn="6"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton6"
        android:layout_marginTop="20dp"
        android:textOff="7"
        android:textOn="7"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton7"
        android:layout_marginTop="20dp"
        android:textOff="8"
        android:textOn="8"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton8"
        android:layout_marginTop="20dp"
        android:textOff="9"
        android:textOn="9"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        app:layout_constraintStart_toEndOf="@id/toggleButton9"
        android:layout_marginTop="20dp"
        android:textOff="10"
        android:textOn="10"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />


    <Button
        android:id="@+id/upload_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button"
        android:text="Upload"
        android:textColor="@color/pinkDarkpastel"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ripeness_level"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:text="Save"
        android:textColor="@color/pinkDarkpastel"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upload_button"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="700dp"
        android:layout_height="359dp"
        android:layout_gravity="center_horizontal|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="-5dp"
        android:scaleType="center"
        android:src="@drawable/login_img"
        tools:layout_editor_absoluteX="-145dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>