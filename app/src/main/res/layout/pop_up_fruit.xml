<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF">

    <ImageView
        android:id="@+id/popup_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/pop_up_bg" />

    <ImageButton
        android:id="@+id/add_image"
        android:layout_width="107dp"
        android:layout_height="112dp"
        app:layout_constraintEnd_toEndOf="@+id/popup_bg"
        app:layout_constraintBottom_toBottomOf="@+id/popup_bg"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="119dp"
        android:background="@drawable/add_img_box"
        android:src="#00FF" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fruit_name"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/popup_bg"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="31dp"
        android:layout_marginTop="41dp"
        android:hint="Name"
        android:textColor="@color/pinkDarkpastel"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/popup_bg"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-321dp">

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fruit_name"
        app:layout_constraintStart_toStartOf="@+id/popup_bg"
        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:text="Ripeness Level"
        android:textColor="@color/pinkDarkpastel"
        android:textSize="20sp" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@+id/popup_bg"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="45dp"
        android:textColor="@color/pinkDarkpastel"
        android:textOn="1"
        android:textOff="1"
        android:layout_marginTop="140dp"
        android:background="@drawable/ripeness_bg"
        android:text="ToggleButton" />
    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        android:textOn="2"
        android:textOff="2"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        app:layout_constraintStart_toEndOf="@+id/toggleButton1"
        android:text="ToggleButton" />
    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton2"
        android:textOff="3"
        android:textOn="3"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton3"
        android:textOff="4"
        android:textOn="4"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton4"
        android:textOff="5"
        android:textOn="5"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton5"
        android:textOff="6"
        android:textOn="6"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton6"
        android:textOff="7"
        android:textOn="7"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton7"
        android:textOff="8"
        android:textOn="8"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton8"
        android:textOff="9"
        android:textOn="9"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />
    <ToggleButton
        android:id="@+id/toggleButton10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/popup_bg"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton9"
        android:textOff="10"
        android:textOn="10"
        android:textColor="@color/pinkDarkpastel"
        android:background="@drawable/ripeness_bg"
        android:textColorHint="@color/pinkDarkpastel" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/popup_bg"
        app:layout_constraintBottom_toBottomOf="@+id/popup_bg"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/pop_up_bg"
        android:text="Add" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/popup_bg"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintEnd_toStartOf="@+id/button"
        android:background="@drawable/pop_up_bg"
        android:text="Cancel" />


</androidx.constraintlayout.widget.ConstraintLayout>