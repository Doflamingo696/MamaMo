<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF"
    tools:context=".PopUpFragment">

    <ImageView
        android:id="@+id/popup_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pop_up_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/popup_bg"
            app:layout_constraintTop_toTopOf="@id/popup_bg"
            app:layout_constraintEnd_toEndOf="@id/popup_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="87dp"
            android:text="TYPE OF ITEM"
            android:textAlignment="center"
            android:textColor="@color/pinkDarkpastel"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fruit_button"
            android:layout_width="100dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="@id/popup_bg"
            app:layout_constraintBottom_toBottomOf="@id/popup_bg"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/pop_up_bg"
            android:text="Fruit" />

        <Button
            android:id="@+id/vegetable_button"
            android:layout_width="100dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="@id/popup_bg"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintStart_toEndOf="@id/fruit_button"
            app:layout_constraintEnd_toStartOf="@id/canned_food_button"
            android:background="@drawable/pop_up_bg"
            android:text="Vegetable" />

        <Button
            android:id="@+id/canned_food_button"
            android:layout_width="100dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="@id/popup_bg"
            app:layout_constraintBottom_toBottomOf="@id/popup_bg"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/pop_up_bg"
            android:text="Canned
            Food" />
    </androidx.constraintlayout.widget.ConstraintLayout>

